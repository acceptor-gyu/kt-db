<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 테스트 환경: 콘솔에만 로그 출력, 파일에는 기록하지 않음 -->

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger: 테스트 시에는 콘솔에만 출력 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- 테스트 패키지는 DEBUG 레벨로 상세 로그 출력 -->
    <logger name="study.db.server.engine" level="DEBUG" />
</configuration>
